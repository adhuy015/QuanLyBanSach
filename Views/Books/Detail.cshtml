@model QuanLyBanSach.Models.Book

@{
    ViewBag.Title = "Detail";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<div class="col-sm-12 col-md-12">
    <div class="thumbnail">
    </div>
    <div class=" caption">
        <p>
            @Html.DisplayNameFor(model => model.Author):@Html.DisplayFor(Model => Model.Author)
        </p>
        <p>
            @Html.DisplayNameFor(model => model.PublicYear):@Html.DisplayFor(Model => Model.PublicYear)
        </p>
        <p>
            @Html.DisplayNameFor(model => model.Price):@Html.DisplayFor(Model => Model.Price)
        </p>
        <p>
            <a href="#" class="btn btn-primary" role="button">
                Buy
            </a>
            @Html.ActionLink("Back", "ListBooks", "", new { @class = "btn btn-info" })
        </p>
    </div>
</div>
