@model IEnumerable<QuanLyBanSach.Models.Book>
@{
    ViewBag.Title = "ListBooks";
}
<h2>@ViewBag.TitlePageName</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-xs-12">
            <div class="panel panel-default">
                <div class=" panel-heading">
                    @item.Title
                    @Html.ActionLink("Edit", "Edit", new { id = @item.Id }, new { @class = "pull-right" })
                </div>
                <div class="panel-body">
                    <p>
                        <strong> Author: </strong> @item.Author
                    </p>
                    <p>
                        <strong> Public Year:</strong> @item.PublicYear
                    </p>
                    <p>Price:</p>@item.Price
                    <p>
                        <img width="100px" src="/@item.Cover" alt="thumbnail" />
                    </p>
                </div>
                <div class="panel-footer clearfix">
                    <div class=" pull-right">
                        <a href="#" class="btn btn-primary">Other</a>
                        <a href="#" class="btn btn-default">Read more.....</a>
                    </div>

                </div>
            </div>

        </div>
    }
</div>

